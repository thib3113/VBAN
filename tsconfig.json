{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "dom", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "tests"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
